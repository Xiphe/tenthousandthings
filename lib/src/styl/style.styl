color-main = black
color-highlight = #002d8e
color-highlight2 = #ff2d8e

body
	background #f3f3f3
	font-family Avenir, Helvetica, sans-serif
	margin 0

a
	color color-highlight
	&:hover
		color color-highlight2

h1, h2, h3, h4, h5, h6
	text-align center

nav
	font-size 2rem
	ul
		list-style none
		padding 0
		text-align center
	li
		display inline
		&::after
			content " â€¢ "
			position relative
			top .1rem
		&:last-child::after
			content ""

	a
		text-decoration none

.ttt-logo
.ttt-wrap
	display block
	margin 0 auto

p
	margin 0

article
	font-size 1.1rem
	line-height 1.5rem
	padding .1rem
	border-bottom .5rem solid

	h3
		font-size 3rem
		line-height 1.5rem
		margin 1rem 0

	.ttt-wrap
		max-width 720px
		margin-bottom 3rem
		margin-top 2rem

	p
		margin 1rem auto

	img
		display block
		padding 1rem
		max-width 100%

